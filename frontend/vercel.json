{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",    
      "dest": "backend/app.js"
    },
    {
      "src": "/(.*)",        
      "dest": "/frontend/dist/index.html"
    }
  ]
}
